<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="font_very_small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="font_small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="font_medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="font_big">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="font_title">
        <item name="android:textSize">41sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="font_auto_resize">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">48sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>